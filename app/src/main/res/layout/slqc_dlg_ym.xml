<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="参考点："
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/sp_ckd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></Spinner>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="样木类型："
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/sp_ymlx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="样木号："
            android:textSize="18sp"></TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_ymh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ems="10"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="3"></EditText>

            <Button
                android:id="@+id/btn_search"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/xml_btn_search"
                android:text=""
                android:visibility="gone"></Button>
        </LinearLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="立木类型："
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/sp_lmlx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="检尺类型："
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/sp_cjlx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></Spinner>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="树种名称："
            android:textSize="18sp"></TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_szmc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"></EditText>

            <Button
                android:id="@+id/btn_szmc"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/xml_btn_sz"
                android:text=""></Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="前期胸径(cm)："
            android:textSize="18sp"></TextView>

        <EditText
            android:id="@+id/et_qqxj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:inputType="numberDecimal"></EditText>

        <TextView
            android:id="@+id/tv_bqxj"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="本期胸径(cm)："
            android:textSize="18sp"></TextView>

        <EditText
            android:id="@+id/et_bqxj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="5"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="采伐管理类型："
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/sp_cfgllx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></Spinner>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="林层："
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/sp_lc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="跨角地类序号："
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/sp_kjdlxh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></Spinner>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="方位角(°)："
            android:textSize="18sp"></TextView>

        <EditText
            android:id="@+id/et_fwj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="5"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="水平距(m)："
            android:textSize="18sp"></TextView>

        <EditText
            android:id="@+id/et_spj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="4"></EditText>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="备注："
            android:textSize="18sp"></TextView>

        <EditText
            android:id="@+id/et_bz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:maxLength="32"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d0d0d0"
        android:gravity="right">

        <Button
            android:id="@+id/btn_prev"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/my_btn_1"
            android:text="上一条" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/my_btn_1"
            android:text="下一条" />

        <Button
            android:id="@+id/btn_take"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/my_btn_1"
            android:text="拍照" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/my_btn_1"
            android:text="确定" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/my_btn_1"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>