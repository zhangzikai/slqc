<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_list_3">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="@drawable/bg_list_1">

                <ImageView
                    android:id="@+id/iv_compass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fwj_500" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_list_1">

                <TextView
                    android:id="@+id/tv_fwj"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:text="方位角：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_list_1">

                <TextView
                    android:id="@+id/tv_qxj"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:text="倾斜角：" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_list_4">

            <LinearLayout
                android:id="@+id/lay_view"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="@drawable/bg_list_1">

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_list_1">

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:text="卫星数量：0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_list_1">

                <TextView
                    android:id="@+id/tv_jingdu"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:text="坐标精度：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_list_1">

                <TextView
                    android:id="@+id/tv_lon"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:text="经　　度：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_list_1">

                <TextView
                    android:id="@+id/tv_lat"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:text="纬　　度：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_list_1">

                <TextView
                    android:id="@+id/tv_alt"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:text="海　　拔：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_list_1">

                <TextView
                    android:id="@+id/tv_hzb"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:text="横  坐  标：" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_list_1">

                <TextView
                    android:id="@+id/tv_zzb"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:text="纵  坐  标：" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:background="#ffd0d0d0">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:background="@drawable/my_btn_1" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:background="@drawable/my_btn_1" />
    </LinearLayout>

</LinearLayout>
