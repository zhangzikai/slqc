<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_view"
        android:layout_height="400dp"
        android:layout_width="wrap_content"></LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:text="　红色:"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>

            <EditText
                android:id="@+id/et_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="none"
                android:text=""
                android:maxLength="3"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:text="　绿色:"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>

            <EditText
                android:id="@+id/et_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="none"
                android:text=""
                android:maxLength="3"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:text="　蓝色:"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>

            <EditText
                android:id="@+id/et_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="none"
                android:text=""
                android:maxLength="3"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:text="透明度:"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>

            <EditText
                android:id="@+id/et_alpha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="none"
                android:text=""
                android:maxLength="3"></EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <SeekBar
            android:id="@+id/sb_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="255"></SeekBar>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:background="#d0d0d0">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="预览："></TextView>

        <TextView
            android:id="@+id/tv_color"
            android:layout_height="36dp"
            android:layout_width="60dp"
            android:text=""
            android:background="#d08080"></TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""></TextView>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:background="@drawable/my_btn_1"></Button>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:background="@drawable/my_btn_1"></Button>
    </LinearLayout>

</LinearLayout>